<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashCreen"
    android:background="@color/white">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="411dp"
        android:layout_height="478dp"
        android:src="@drawable/booksplash"
        app:layout_constraintBottom_toTopOf="@id/splash_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voice of Education"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/splash_img"
        app:layout_constraintRight_toRightOf="@id/splash_img"
        app:layout_constraintTop_toBottomOf="@id/splash_img" />

</androidx.constraintlayout.widget.ConstraintLayout>